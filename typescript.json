{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboardApproval",
    "docker:disable",
    "group:allNonMajor"
  ],
  "schedule": [
    "* * * * 1"
  ],
  "rangeStrategy": "bump",
  "dependencyDashboardApproval": true,
  "updateNotScheduled": false,
  "vulnerabilityAlerts": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchDepNames": ["node"],
      "enabled": false
    }
  ]
}
